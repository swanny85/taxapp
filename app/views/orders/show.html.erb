<p style="color: green"><%= notice %></p>


<div>
  <%= link_to "Back to orders", orders_path %>
  <%= link_to "Edit Order", edit_order_path(@order) %>

  <%= button_to "Destroy this order", @order, method: :delete %>
</div>

<main class="relative lg:min-h-full">
  <div class="h-80 overflow-hidden lg:absolute lg:w-1/2 lg:h-full lg:pr-4 xl:pr-12">
    <img src="https://tailwindui.com/img/ecommerce-images/confirmation-page-06-hero.jpg" alt="TODO" class="h-full w-full object-center object-cover">
  </div>

  <div>
    <div class="max-w-2xl mx-auto py-16 px-4 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8 lg:py-32 lg:grid lg:grid-cols-2 lg:gap-x-8 xl:gap-x-24">
      <div class="lg:col-start-2">
        <h1 class="text-sm font-medium text-indigo-600">Order Summary</h1>
        <p class="mt-2 text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl">Here's the summary</p>

        <ul role="list" class="mt-6 text-sm font-medium text-gray-500 border-t border-gray-200 divide-y divide-gray-200">
          <%= render @order_items %>
        </ul>

        <%= render @order %>

        <div class="mt-16 border-t border-gray-200 py-6 text-right">
          <%= link_to "Edit Order", edit_order_path(@order), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
    </div>
  </div>
</main>



